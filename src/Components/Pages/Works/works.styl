}

.job__my
  margin-right: 60px;

.job__image_jpeg
  border 4px solid white

.jobs__subtitle {
  font-size: 48px;
  display: block;
  margin-top: -9px;
  padding: 8px 0 8px 25px;
  background: #ffd500;
}

.jobs__item {
  margin-bottom: 30px;
}

.jobs__half {
  display: inline-block;
  width: 50%;
  text-align: left;
  vertical-align: top;
}

.job__title
  font-weight: 600;
  position: relative;
  margin: 0 0 30px 0;
  padding: 4px 4px;
  color: #fff;
  background: #242733;
  font-size: 20px;
  @media (min-width: 768px)
    font-size: 30px;


.response__img
  @media (min-width: 768px)
    width: 100%;

.job__subtitle {
  font-size: 16px;
  font-weight: 600;
  margin-bottom: 15px;
  padding: 0 20px;
}

.job__text
  margin-bottom: 30px;
  padding: 0;
  text();

.job__image
  width: 100%;
  height calc(100% - 5px)

.job__images_wrapper
  cursor pointer
  position: relative
  width 100%
  margin 1%
  @media (min-width: 568px)
    width: 48%

  &:before
    position absolute
    content ''
    top 0
    left 0
    width 100%
    height 99%
    box-shadow: inset 0 0 2px rgba(0, 0, 0, .7), inset 0 2px 0 rgba(255, 255, 255, .3), inset 0 -1px 0 rgba(0, 0, 0, .5), 0 1px 3px rgba(0, 0, 0, .4);

  //border 1px solid salmon

  &:after
    position: absolute;
    content: ' ';
    width: 60px;
    height: 25px;
    top: -10px;
    left: 50%;
    margin-left: -30px;
    border: solid 1px rgba(137, 130, 48, .2);
    background: linear-gradient(top, rgba(255, 213, 0, .6) 0%, rgba(240, 224, 54, .6) 100%);
    background: -moz-linear-gradient(top, rgba(255, 213, 0, .6) 0%, rgba(240, 224, 54, .6) 100%);
    background: -webkit-gradient(linear, left top, left bottom, color-stop(0%, rgba(255, 213, 0, .6)), color-stop(100%, rgba(255, 213, 0, .6)));


.--margin {
  margin-top: 5px;
}

.--with-height
  height: 168px
  @media (min-width: 768px)
