@import "../../../StylusCSS/colors"
@import "../../../StylusCSS/mixins"

.footer
  flex()
  padding-left 10px
  padding-right 10px
  color #fff
  background main-color
  @media (min-width: 960px)
    width 960px
    margin auto

.footer__logo
  width: 300px;
  margin-top: 20px;

  & .logo
    font-size: 24px;

.cp
  margin-top 10px
  margin-bottom 10px
  @media (min-width: 575px)
    margin-bottom 20px

.footer__phone
  width: 210px
  margin-bottom 20px
  @media (min-width: 575px)
    margin-top 20px
    margin-bottom 0

