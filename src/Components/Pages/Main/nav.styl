@import "../../../StylusCSS/colors"

.main-menu {
  position: fixed;
  z-index: 500;
  top: 0;
  right: 0;
  left: 0;
  color: #fff;
  background: #242733;
}

.menu {
  font-size: 20px;
  font-weight: 300;
  line-height: 48px;
  width: 70%;
  padding: 0;
  list-style: none;
  margin: auto;
}

.menu__item {
  float: left;
}

.menu__item--phone {
  display: none;
}

a {
  color: inherit;
}

.menu__href
  display: inline-block;
  padding: 0 16px;
  position: relative;
  text-decoration: none;
  height: 45px;
  line-height: 45px;
  color: #ffffff;
  transition: all 1s ease 0s;
  &:not(.active)
    &:hover
      opacity:1;
      -webkit-box-shadow: 0 0 25px #cccccc
      -moz-box-shadow: 0 0 25px #cccccc;
      box-shadow: 0 0 25px #cccccc;


.menu__href.active
  color:color-yellow;
